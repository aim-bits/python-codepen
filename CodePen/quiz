import random

print("Select your preferred stage to choose from \nEasy = 1 \nMedium = 2 \nHard = 3")

stage_selection = int(input("Ans: "))
if stage_selection == 1:
    random_number = random.randint(1,6)
    guess = int(input("Select a number from 1 to 5: "))
    if guess == random_number: 
        print("Awesome!! you did well")
    elif guess != random_number:
        print("You failed")
        print("The random number was ", random_number)
    else: 
        print("You entered a wrong input")

elif stage_selection == 2:
    random_number = random.randint(1,11)
    guess = int(input("Select a number from 1 to 10: "))
    if guess == random_number: 
        print("Awesome!! you did well")
    elif guess != random_number:
        print("You failed")
        print("The random number was ", random_number)
    else: 
        print("You entered a wrong input")    
    
elif stage_selection == 3:
    random_number = random.randint(1,11)
    guess = int(input("Select a number from 1 to 10: "))
    if guess == random_number: 
        print("Awesome!! you did well")
    elif guess != random_number:
        print("You failed")
        print("The random number was ", random_number)
    else: 
        print("You entered a wrong input")
        
else: 
    print("You selected a wrong answer try again")
      
